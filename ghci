-- Disable at the command line with -ignore-dot-ghci

-- Purple prompt and multiline input
:set +m
:set prompt "\ESC[1;35m> \ESC[m"
:set prompt-cont "\ESC[1;35m| \ESC[m"

-- Extensions to deriving
:set -XDeriveDataTypeable
:set -XDeriveFoldable
:set -XDeriveFunctor
:set -XDeriveGeneric
:set -XDeriveTraversable
:set -XStandaloneDeriving

-- Extensions type classes
:set -XFlexibleContexts
:set -XFlexibleInstances
:set -XFunctionalDependencies
:set -XMultiParamTypeClasses

-- Purely syntactic
:set -XKindSignatures
:set -XLambdaCase
:set -XMultiWayIf
:set -XTupleSections
:set -XTypeOperators

-- Fancier types
:set -XDataKinds
:set -XExistentialQuantification
:set -XGADTs
:set -XPolyKinds
:set -XRankNTypes
:set -XScopedTypeVariables
:set -XTypeApplications
:set -XTypeFamilies
:set -XTypeFamilyDependencies
-- :set -XTypeInType

