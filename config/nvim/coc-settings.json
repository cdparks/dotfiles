{
  "coc.preferences.formatOnSaveFiletypes": [
    "hs",
    "hls",
    "haskell"
  ],
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        "hie.yaml",
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml"
      ],
      "filetypes": [
        "haskell",
        "lhaskell"
      ],
      "initializationOptions": {
        "haskell": {
          "formattingProvider": "ormolu",
          "formatOnImportOn": false
        }
      }
    }
  },
  "rust-analyzer.inlayHints.typeHints": false
}
